@model IEnumerable<Egabinet.Models.TimeSheetViewModel>



<h1>Appointments:</h1>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Patient)</th>
            <th>@Html.DisplayNameFor(model => model.Doctor)</th>
            <th>@Html.DisplayNameFor(model => model.Room)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
    <tbody>
                @foreach (TimeSheetViewModel item in Model)
                {
            <tr>
                <td>
                            @item.Patient
                </td>
                <td>
                            @item.Doctor
                </td>
                <td>
                            @item.Room
                </td>
                <td>
                            @item.Date
                </td>
                    <td>
                    <form asp-action="DeleteVisit" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-link">
                        Delete
                        </button>
                    </form>
                    </td>
            </tr>
                }
    </tbody>
        </tr>
    </thead>

</table>